<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.homework.todolist.mapper.TodoMapper">
    <resultMap id="TodoMap" type="com.homework.todolist.pojo.Todo">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="content" jdbcType="VARCHAR" property="content" />
        <result column="status" jdbcType="INTEGER" property="status" />
        <result column="created_at" jdbcType="TIMESTAMP" property="createdAt" />
    </resultMap>

    <insert id="createTodo" parameterType="Todo" useGeneratedKeys="true" keyProperty="id">
        insert into todo.todo_list
        (id, content, status, created_at)
        values (#{id,jdbcType=INTEGER},#{content,jdbcType=VARCHAR},#{status,jdbcType=INTEGER},#{createdAt,jdbcType=TIMESTAMP})
    </insert>

    <select id="listTodo" resultMap="TodoMap">
        select id,content,status,created_at
        from todo.todo_list
    </select>

    <update id="updateStatus">
        update todo.todo_list
        set status = #{status,jdbcType=INTEGER}
        where id = #{id,jdbcType=INTEGER}
    </update>

    <update id="updateContent">
        update todo.todo_list
        set content = #{content,jdbcType=VARCHAR}
        where id = #{id,jdbcType=INTEGER}
    </update>

    <delete id="deleteTodo"  parameterType="java.lang.Integer">
        delete from todo.todo_list
        where id = #{id,jdbcType=INTEGER}
    </delete>

    <select id="getTodoById" parameterType="java.lang.Integer" resultMap="TodoMap">
        select id,content,status,created_at
        from todo.todo_list
        where id = #{id,jdbcType=INTEGER}
    </select>

</mapper>